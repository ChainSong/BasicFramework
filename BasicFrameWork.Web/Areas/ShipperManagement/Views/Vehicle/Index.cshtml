                    <th>车型<br />类别</th>
                    <th>更新人</th>
                    <th>更新<br />日期</th>
                    <th>操作</th>
                </tr>
            
            <tbody>
                @if (Model.VehicleCollection != null && Model.VehicleCollection.Any())
                {
                    foreach (var item in Model.VehicleCollection)
                    {
                        <tr>
                            <td><a href="/ShipperManagement/Vehicle/CreateOrUpdate?id=@item.ID&type=1"><strong>@item.CarNo</strong></a></td>
                            <td>@item.RunNo</td>
                            <td>@item.CarTypeNo</td>
                            <td>@item.LogisticCompany</td>
                            <td>@item.DrivedJourney</td>
                            <td>@item.BoardlotDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.CarNumType</td>
                            <td>@item.FuelType</td>
                            <td>@item.CarBodyColor</td>
                            <td>@item.Manufacturer</td>
                            <td>@item.StartServiceDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.EntireCarWeight</td>
                            <td>@item.CarType</td>
                            <td>@item.UpdateUser</td>
                            <td>@item.UpdateTime</td>
                            <td>
                               <label id="UpdateVehicle" style="cursor:pointer;" class ="btn btn-primary btn-xs EditButton" data-id="@item.ID">编辑</label>
                               <label id="deleteVehicle" style="cursor:pointer;" class ="btn btn-primary btn-xs EditButton" data-id="@item.ID">删除</label>
                               <label id ="VeDrMapping" style="cursor:pointer;" class ="btn btn-primary btn-xs EditButton" data-id ="@item.ID">司机分配</label>
                            </td>
                        </tr> 
